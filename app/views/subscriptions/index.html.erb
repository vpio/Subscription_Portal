<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h1 class="text-white title-outline">My Subscriptions</h1>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="demo-list-item mdl-list shadow-depth">
        <% @subscriptions.each do |subscription| %>
          <tr class="mdl-list__item">
            <td><%=current_user.email%>'s Subscription: </td>
            <td><%= link_to 'Edit', edit_subscription_path(subscription), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %></td>
            <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= render 'form', subscription: @subscription %>
  </div>
</div>
